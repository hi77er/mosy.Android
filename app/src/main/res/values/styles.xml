<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="suggestionRowLayout">@layout/action_bar_search_suggestion_row</item>

        <item name="android:editTextColor">@color/colorPrimaryVeryLight</item>
        <item name="android:textColorHint">@color/colorPrimaryVeryLight</item>

        <item name="queryBackground">@color/transparent</item>
        <item name="submitBackground">@color/transparent</item>

        <item name="closeIcon">@drawable/ic_action_close_white</item>
        <item name="searchIcon">@drawable/ic_action_search_white</item>

        <item name="android:padding">0dp</item>

        <!-- Go/commit button icon -->
        <!--<item name="goIcon">...</item>-->
        <!--&lt;!&ndash; Voice search button icon &ndash;&gt;-->
        <!--<item name="voiceIcon">...</item>-->
        <!--&lt;!&ndash; Commit icon shown in the query suggestion row &ndash;&gt;-->
        <!--<item name="commitIcon">...</item>-->
        <!-- Layout for query suggestion rows -->
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">#720023</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.SearchViewDarkStyle" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:editTextColor">@color/colorWhite</item>
    </style>
</resources>
