<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/filtersInfoItem_tvMatchingFiltersInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimary"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="Test matching filters info"
        android:visibility="gone" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layoutDirection="ltr">

        <TextView
            android:id="@+id/filtersInfoItem_tvMismatchingFiltersInfoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:textColor="@color/colorAccent"
            android:background="@color/colorPrimary"
            android:textSize="12sp"
            android:text="@string/activity_wall_missingFiltersInfoLabel"
            android:visibility="gone" />

        <TextView
            android:id="@+id/filtersInfoItem_tvMismatchingFiltersInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"
            android:background="@color/colorPrimary"
            android:visibility="gone" />

    </LinearLayout>
    <!--android:textStyle="bold"-->

</LinearLayout>