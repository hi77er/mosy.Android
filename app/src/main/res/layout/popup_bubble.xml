<?xml version="1.0" encoding="utf-8"?>
<com.daasuu.bl.BubbleLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:padding="12dp"
    app:bl_bubbleColor="@color/colorPrimarySalmon"
    app:bl_arrowDirection="right"
    app:bl_arrowHeight="8dp"
    app:bl_arrowPosition="20dp"
    app:bl_arrowWidth="8dp"
    app:bl_cornersRadius="6dp"
    app:bl_strokeWidth="0dp">

    <TextView
        android:id="@+id/filtersPopup_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="4dp"
        android:text="@string/activity_venues_filtersSettingsTextView"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite" />

</com.daasuu.bl.BubbleLayout>
