<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPageBackground1"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:paddingEnd="10dp">

    <LinearLayout
        android:id="@+id/venueDetails_lVenueTitle"
        android:orientation="horizontal"
        android:layout_gravity="start"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="match_parent">
        <!--android:layout_marginBottom="10dp"-->

        <ImageView
            android:id="@+id/venueDetails_ivIndoor"
            android:layout_gravity="start"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:visibility="gone" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/venueDetails_tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/venue_item_name"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/venueDetails_tvClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/venue_item_class"
                android:layout_marginTop="5dp"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>




</LinearLayout>