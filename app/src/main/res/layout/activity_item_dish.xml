<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:layout_alignParentEnd="true"
    android:paddingStart="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="4dp"
    android:paddingEnd="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/menuListItem_tvName"
                android:layout_gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/menulist_item_name"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/menuListItem_tvVenueName"
                android:layout_gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/menulist_item_venueName"
                android:textSize="14sp"
                android:textColor="@color/soft"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/rating_salmon"/>

        <TextView
            android:id="@+id/menuListItem_tvPriceTag"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/colorPrimarySalmon"
            android:text="7.6"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menuListItem_ivThumbnail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/eat_paprika" />

        <LinearLayout
            android:layout_marginTop="13dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp">

                 <ImageView
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="wrap_content"
                     android:src="@drawable/distance_paprika" />

                 <TextView
                     android:id="@+id/menuListItem_tvDistance"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="match_parent"
                     android:textStyle="bold"
                     android:textSize="21sp"
                     android:textColor="@color/colorPrimary"
                     android:text="0m"
                     android:gravity="center_vertical" />

                 <ImageView
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="wrap_content"
                     android:src="@drawable/walkingtime_paprika"/>

                 <TextView
                     android:id="@+id/menuListItem_tvWalkingTime"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="match_parent"
                     android:textStyle="bold"
                     android:textSize="21sp"
                     android:textColor="@color/colorPrimary"
                     android:text="0min"
                     android:gravity="center_vertical"  />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/open_moss"/>

                <TextView
                    android:id="@+id/menuListItem_tvEmptyText"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pricetag_paprika"/>

                <TextView
                    android:id="@+id/menuListItem_tvRatingTag"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textSize="21sp"
                    android:textColor="@color/colorPrimary"
                    android:text="$5.20"
                    android:gravity="center_vertical" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>