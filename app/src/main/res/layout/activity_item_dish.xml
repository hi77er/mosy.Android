<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:layout_alignParentEnd="true"
    android:paddingStart="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingEnd="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/menuListItem_ivThumbnail"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/drink_default" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/menuListItem_tvName"
            android:layout_gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menulist_item_name"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/menuListItem_tvVenueName"
            android:layout_gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menulist_item_venueName"
            android:textSize="16sp"
            android:textColor="@color/soft"
            android:textStyle="bold" />

        <!--<TextView-->
            <!--android:id="@+id/venueItem_tvOpenedSinceUntil"-->
            <!--android:layout_gravity="start"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textStyle="bold"-->
            <!--android:textSize="16sp"-->
            <!--android:textColor="@color/soft" />-->

        <TextView
            android:id="@+id/menuListItem_tvDistance"
            android:layout_gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/colorQuaternary" />
    </LinearLayout>

</LinearLayout>