<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menuListItem_llRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/menuListItem_ivDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu_down_24"
        android:tint="@color/soft"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/menuListItem_tvName"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:text="@string/item_menuListItem_nameTextView"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/menuListItem_tvPrice"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginEnd="10dp"
        android:textColor="@color/softer"
        android:text="@string/item_menuListItem_priceTextView"
        android:textSize="16sp" />

    <!--<Button
        android:Id="@+Id/requestable_btnAddToOrder"
        android:text="@string/requestable_btnAddToOrder"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />-->

</LinearLayout>